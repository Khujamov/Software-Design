<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import mediator.othello.ImageGrid?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="mediator.othello.Othello">
    <top>
        <Button text="New game" onAction="#newAction"/>
    </top>
    <center>
        <ImageGrid fx:id="imageGrid"
                   onMouseClicked="#mouseClicked"
                   columnCount="8" rowCount="8"
        >
        </ImageGrid>
    </center>
    <bottom>
        <Label fx:id="statusLabel" text="Status"/>
    </bottom>
</BorderPane>
