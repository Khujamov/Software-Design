<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import mediator.othello.board.BoardGrid?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="mediator.othello.Reversi">
    <top>
        <Button text="New game" onAction="#newAction"/>
    </top>
    <center>
        <BoardGrid
                fx:id="gridPanel"
                columnCount="8" rowCount="8">
                <!--onMouseClicked="#mouseClicked"-->
        </BoardGrid>
    </center>
    <bottom>
        <Label fx:id="statusLabel" text="Status"/>
    </bottom>
</BorderPane>
